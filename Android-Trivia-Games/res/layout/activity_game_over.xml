<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/image_height_land"
            android:src="@drawable/owl_reading"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_over"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/black"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/scoreWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score"
                android:textColor="@color/black"
                android:textSize="@dimen/title_text_size"
                android:layout_marginVertical="@dimen/text_margin_vertical"/>
            <TextView
                android:id="@+id/finalScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/title_text_size"
                android:layout_marginVertical="@dimen/text_margin_vertical"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sendGradesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_score"
            android:background="@drawable/return_button_style"
            android:layout_marginHorizontal="@dimen/item_margin_horizontal"
            android:layout_marginVertical="@dimen/item_margin_vertical"
            android:textAllCaps="false"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/returnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/go_to_main_page"
            android:background="@drawable/return_button_style"
            android:layout_marginHorizontal="@dimen/item_margin_horizontal"
            android:layout_marginVertical="@dimen/item_margin_vertical"
            android:textAllCaps="false"
            />

    </LinearLayout>
</ScrollView>
